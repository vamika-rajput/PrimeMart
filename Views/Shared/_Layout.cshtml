<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/NavbarLayout.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="navbar-custom">
        <!-- Logo Section -->
        <div class="logo">
            <img src="~/Images/p4-removebg-preview.png" alt="Prime Mart Logo">
        </div>

        <!-- Location Section -->
        <div class="location">
            <i class="bi bi-geo-alt"></i>
            <span>395004</span>
            <select id="locationSelect">
                <option value="Surat">Surat</option>
            </select>
        </div>

        <!-- Delivery Info Section -->
        <div class="delivery-info">
            <span>Earliest Home Delivery available</span><br>
            <strong>Today 12:00 PM - 01:00 PM</strong>
        </div>

        <!-- Search Bar Section -->
        <div class="search-bar">
            <input type="text" placeholder="Search for Soups">
            <button>Search</button>
        </div>

        <!-- Nav Options (Sign In, Cart, Notification) -->
        <div class="nav-options">
            <a href="#">Sign In / Register</a>
            <i class="bi bi-bell"></i>
            <i class="bi bi-cart"></i>
            <span>₹0</span>
        </div>
    </div>

    <!-- Categories Section -->

    <div class="sub-navbar">

        <a href="#">All Categories</a>
        <a href="#">Ready To Cook</a>
        <a href="#">Home Appliances</a>
        <a href="#">Cookware</a>
        <a href="#">Serveware</a>
        <a href="#">Cleaners</a>
        <a href="#">Detergent & Fabric Care</a>
    </div>

    <div id="carouselExampleRide" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/dairy products.png" class="d-block w-100" alt="Dairy Products">
            </div>
            <div class="carousel-item">
                <img src="~/Images/grocery.png" class="d-block w-100" alt="Grocery">
            </div>
            <div class="carousel-item">
                <img src="~/Images/mega sale.jpg" class="d-block w-100" alt="Mega Sale">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="popular-categories">
        <h2>Popular Categories</h2>
        <div class="categories-container">
            <div class="category-item">
                <img src="~/Images/dairy.png" alt="Dairy">
                <p>Dairy</p>
            </div>
            <div class="category-item">
                <img src="~/Images/tea.png" alt="Tea">
                <p>Tea</p>
            </div>
            <div class="category-item">
                <img src="~/Images/softdrinks.png" alt="Soft Drinks">
                <p>Soft Drinks</p>
            </div>
            <div class="category-item">
                <img src="~/Images/cleaners.png" alt="Cleaners">
                <p>Cleaners</p>
            </div>
            <div class="category-item">
                <img src="~/Images/soaps.png" alt="Bath Soaps">
                <p>Bath Soaps</p>
            </div>
            <div class="category-item">
                <img src="~/Images/toothpaste.png" alt="Toothpaste">
                <p>Toothpaste</p>
            </div>
            <div class="category-item">
                <img src="~/Images/shampoos.png" alt="Shampoos">
                <p>Shampoos</p>
            </div>
            <div class="category-item">
                <img src="~/Images/poojaneeds.png" alt="Pooja Needs">
                <p>Pooja Needs</p>
            </div>
            <div class="category-item">
                <img src="~/Images/towels.png" alt="Towels">
                <p>Towels</p>
            </div>
            <div class="category-item">
                <img src="~/Images/bath-unity.png" alt="Bath Utility">
                <p>Bath Utility</p>
            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

